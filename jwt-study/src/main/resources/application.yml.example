spring:
  application:
    name: jwt-study

  datasource:
    url: jdbc:mysql://localhost:3306/jwt_study?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: root
    password: # MySQL 비밀번호 입력
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    hibernate:
      ddl-auto: none # schema.sql 사용
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQL8Dialect

  sql:
    init:
      mode: always
      schema-locations: classpath:schema.sql

# JWT 설정
jwt:
  secret-key: your-secret-key-minimum-256-bits-for-hmac-sha256-algorithm-security # 최소 256비트
  access-token-expiry: 900       # 15분 (초 단위)
  refresh-token-expiry: 604800   # 7일 (초 단위, Idle 만료)
  refresh-token-absolute-expiry: 2592000  # 30일 (초 단위, Absolute 만료)

# 로깅 설정
logging:
  level:
    com.example.jwt_study: INFO
    org.springframework.security: INFO
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE